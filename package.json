{
  "name": "warage-launcher",
  "productName": "WARAGE Launcher",
  "version": "1.0.0",
  "description": "My Custom Minecraft Launcher",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.warage.launcher",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "extraResources": [
      {
        "from": "resources/java8",
        "to": "java8"
      },
      {
        "from": "resources/authlib",
        "to": "authlib"
      }
    ]
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.6.0",
    "electron-is-dev": "^3.0.1",
    "fs-extra": "^11.2.0",
    "minecraft-launcher-core": "^3.12.0"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1"
  }
}
